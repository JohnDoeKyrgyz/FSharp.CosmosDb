{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "publish",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "shell",
      "args": ["test"],
      "group": {
        "isDefault": true,
        "kind": "test"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile",
      "dependsOn": ["build"]
    },
    {
      "label": "run analyzers",
      "type": "shell",
      "command": "dotnet",
      "args": ["fake", "run", "./build.fsx", "--target", "RunAnalyzer"],
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
